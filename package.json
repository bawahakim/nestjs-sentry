{
  "name": "@travelerdev/nestjs-sentry-workspace",
  "version": "0.0.0",
  "private": true,
  "description": "The workspace for the GraphQL and non-GraphQL instances of nestjs-sentry",
  "author": "Zack Sheppard (Traveler Dev Ltd)",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b -v packages/nestjs-sentry packages/nestjs-sentry-graphql",
    "clean": "tsc -b --clean packages",
    "format": "prettier packages/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'packages/**/*.ts'",
    "lint:fix": "eslint 'packages/**/*.ts' --fix",
    "prepublish:npm": "yarn build",
    "publish:npm": "lerna publish",
    "test": "lerna run test --parallel"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@sentry/hub": "^7.12.0",
    "@sentry/node": "^7.12.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "lerna": "7.0.2",
    "lint-staged": "13.2.2",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^7.1.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.1.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.0.0"
  },
  "changelog": {
    "labels": {
      "feature": "Features",
      "bug": "Bug fixes",
      "enhancement": "Enhancements",
      "docs": "Docs",
      "dependencies": "Dependencies"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/travelerdev/nestjs-sentry"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
